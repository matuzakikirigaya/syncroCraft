{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "ES2019",
    "noImplicitAny": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "dist",
    "baseUrl": "src",
    "lib": ["es2015"],
    "paths": {
      "*": ["node_modules/*", "src/types/*"]
    },
  },
  "include": ["src/**/*"],
}
